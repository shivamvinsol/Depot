<div>
  Category: <strong> <%= @category.name %> </strong>
</div>
<br />

<div>
  <strong> Add New Sub-category </strong>
  <br  />
  <%= render 'new_sub_category' %>
</div>

<br />
<div>
  <strong><u> All Sub Categories </u> </strong>
  <table>
    <% @category.sub_categories.each do |sub_category| %>
      <tr>
        <td> <%= sub_category.name %> </td>
        <td> <%= link_to 'Delete', category_path(sub_category), method: :delete %> </td>
      </tr>
    <% end %>
  </table>
</div>
