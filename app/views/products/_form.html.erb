<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 6 %>
  </div>

  <div class="field">
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :enabled %>
    <%= f.check_box :enabled %>
  </div>

  <div class="field">
    <%= f.label :discount_price %>
    <%= f.text_field :discount_price %>
  </div>

  <div class="field">
    <%= f.label :permalink %>
    <%= f.text_field :permalink %>
  </div>

  <div class="field">
    <%= f.label :category_id, 'Category' %>
    <%= f.select :category_id, Category.pluck(:name, :id), prompt: 'Select one' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
