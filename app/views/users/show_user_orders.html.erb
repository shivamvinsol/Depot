<table border="1">
  <tr>
    <th> Items </th>
    <th> Total Price </th>
  </tr>

  <% @user.orders.each do |order| %>
    <tr>
      <td>
        <% order.line_items.each do |line_item| %>
        <%= pluralize(line_item.quantity, line_item.product.title) %>
        <% end %>
      </td>
      <td>
        <%= order.line_items.to_a.sum { |line_item| line_item.total_price } %>
      </td>
    </tr>
  <% end %>
</table>
